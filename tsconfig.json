{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "dom"
      ],
      "target": "es5",
      "module": "commonjs",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,

      /* Module Resolution Options */
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "esModuleInterop": true
   }
}